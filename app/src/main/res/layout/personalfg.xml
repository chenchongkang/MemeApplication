<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/ic_startthree"
        android:gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/round_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_startthree" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_below="@+id/round_1"
            android:text="一点点小任性"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#e0e0e0"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_xz"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/xz_text"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_startone"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/xz_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:text="我的下载"
                android:textColor="#212121"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#bdbdbd"
            >

        </View>

        <RelativeLayout
            android:id="@+id/rl_sc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/sc_text"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_startone"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/sc_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="12dp"
                android:text="收藏"
                android:textColor="#212121"
                android:textSize="18sp"
                />

        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#bdbdbd"
            >

        </View>

        <RelativeLayout
            android:id="@+id/rl_pj"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/pj_text"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_startone"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/pj_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="12dp"
                android:text="评价"
                android:textColor="#212121"
                android:textSize="18sp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_sz"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/sz_text"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_startone"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/sz_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="12dp"
                android:text="设置"
                android:textColor="#212121"
                android:textSize="18sp"
                />

        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#bdbdbd"
            >

        </View>

        <RelativeLayout
            android:id="@+id/rl_gy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/gy_text"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_startone"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/gy_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="12dp"
                android:text="关于应用"
                android:textColor="#212121"
                android:textSize="18sp"
                />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>