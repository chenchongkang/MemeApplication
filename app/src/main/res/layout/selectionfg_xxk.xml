<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView_2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_select_cover"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_startone"/>

            <TextView
                android:id="@+id/tv_select_name"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:text="表情包1"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_select_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_select_cover"
                android:layout_alignLeft="@+id/tv_select_name"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/bt_select_type"
                android:layout_toStartOf="@+id/bt_select_type"
                android:gravity="left"
                android:maxLength="30"
                android:maxLines="2"
                android:text="表情包1的描述表情包1的描述"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/bt_select_type"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="暴漫"
                android:textColor="#d500f9"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
